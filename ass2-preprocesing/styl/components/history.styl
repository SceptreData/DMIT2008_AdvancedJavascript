.five-day-report
    list-style: none
    display: flex
    padding-left: 0

.history-item
    padding: .5rem
    // width: 100px
    margin-right: .25rem
    background: white;
    color: #444;
    border-radius: 4px
    .report-date
        text-align: center
        font-weight: 700
        font-size: 1.5rem
        margin-bottom .5rem
    
    .report-date > span
        display: block
        font-weight: 300
        font-size: .8rem

    .report-open,
    .report-close,
    .report-change
        text-align left
        font-weight: 400
        color: #888;
        font-size .8rem
        margin-bottom .25rem

        & > span 
            font-size: 1.125rem;
            font-weight: 600
            color: #444

.reveal-history-btn
    margin 0 auto
    padding: .5rem 1.25rem  
    border 0
    background: lightblue
    transition 500ms ease all
    cursor: pointer
    outline: none
    position relative
    margin-left: auto;

.reveal-history-btn:hover
  background:#fff;
  color:#1AAB8A;

.reveal-history-btn:before,.reveal-history-btn:after
  content:'';
  position:absolute;
  top:0;
  right:0;
  height:2px;
  width:0;
  background: #1AAB8A;
  transition:400ms ease all;

.reveal-history-btn:after
  right:inherit;
  top:inherit;
  left:0;
  bottom:0;

.reveal-history-btn:hover:before,.reveal-history-btn:hover:after
  width:100%;
  transition:800ms ease all;
