.container 
    max-width: 500px
    margin: 3rem auto
    padding: 2rem 1rem
    background: $sleazy-grey
    border-radius: 4px

  .stock-ticker 
      padding-top: 1rem
      margin: 0 auto
      max-width: $max-width

  .stock-display 
      max-width: $max-width
      margin: 0 auto
      text-align: center

  .details 
      line-height: 2rem
      display: flex
      justify-content: space-between
      align-items: center
